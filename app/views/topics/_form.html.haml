= form_for @topic do |f|
  - if @topic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@topic.errors.count, "error")} prohibited this topic from being saved:"
      %ul
        - @topic.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :key
    = f.text_field :key
  .field
    = f.label :label
    = f.text_field :label
  .actions
    = f.submit 'Save'
