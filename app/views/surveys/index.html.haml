= turbo_include_tags
%h1 Listing surveys

%table
  %thead
    %tr
      %th Name
      %th Topic
      %th Customer
      %th
      %th
      %th

  %tbody
    - @surveys.each do |survey|
      %tr
        %td= survey.name
        %td= link_to survey.topic.label, survey.topic
        %td= link_to survey.customer.name, survey.customer

        %td= link_to 'Show', survey
        %td= link_to 'Edit', edit_survey_path(survey)
        %td= link_to 'Destroy', survey, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }

%br

= link_to 'New Survey', new_survey_path
